<Window x:Class="EmailSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmailSender"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <TextBox x:Name="SenderEmail" IsEnabled="False" Margin="0 5 0 0" Width="300" Height="30"/>
            <TextBox x:Name="DestinationEmail" Width="300" Margin="0 15 0 0" Height="30"/>
            <TextBox x:Name="DestinationBody" Width="300" Margin="0 15 0 0" Height="30"/>
            <Button x:Name="Send" IsEnabledChanged="Send_IsEnabledChanged" Width="100" Height="40" Margin="0 15 0 0" Content="Send" Click="Send_Click" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Button x:Name="Disconnect" Width="100" Height="40" Margin="0 15 0 0" Content="Disconnect" Click="Disconnect_Click" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        </StackPanel>
    </Grid>
</Window>
